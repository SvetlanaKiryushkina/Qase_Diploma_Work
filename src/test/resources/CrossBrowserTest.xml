<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="2" name="Smoke Test Qase" parallel="tests">
    <listeners>
        <listener class-name="listners.TestListener"/>
        <listener class-name="listners.AnnotationTransformer"/>
    </listeners>
    <test name="Chrome">
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.CaseTest"/>
            <parameter name="browser" value="chrome"/>
        </classes>
    </test>
    <test name="Firefox">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.CaseTest"/>
            <parameter name="browser" value="firefox"/>
        </classes>
    </test>
</suite>
